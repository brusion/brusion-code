<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

    <bean id="byIndex" class="com.demo.BeanApi">
        <constructor-arg index="0" value="test data by index"/>
        <constructor-arg index="1" value="1"/>
    </bean>

    <bean id="byType" class="com.demo.BeanApi">
        <constructor-arg type="java.lang.String" value="test data by type"/>
        <constructor-arg type="int" value="2"/>
    </bean>

    <bean id="byName" class="com.demo.BeanApi">
        <constructor-arg value="Hello World!"/>
        <constructor-arg value="3"/>
    </bean>
</beans>